{
  "manifest_version": "2",
  "api_version": "1",
  "name": "GitHub",
  "description": "Interact with your GitHub account",
  "developer_name": "Bruno Paz",
  "icon": "images/icon.png",
  "options": {
    "query_debounce": 1
  },
  "preferences": [
    {
      "id": "kw",
      "type": "keyword",
      "name": "GitHub",
      "description": "Access your GitHub account",
      "default_value": "gh"
    },
    {
      "id": "kw_gists",
      "type": "keyword",
      "name": "Gists",
      "description": "Show your GitHub Gists",
      "default_value": "gists"
    },
    {
      "id": "kw_repos",
      "type": "keyword",
      "name": "GitHub Repos",
      "description": "Access to your GitHub repos",
      "default_value": "ghrepos"
    },
    {
      "id": "kw_search",
      "type": "keyword",
      "name": "GitHub Repos Search",
      "description": "Search public repos on GitHub",
      "default_value": "ghsearch"
    },
    {
      "id": "access_token",
      "type": "input",
      "name": "GitHub access token",
      "description": "The Personal Access token to authenticate on GitHub API",
      "default_value": ""
    }
  ]
}
